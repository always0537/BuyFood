<div class="signup-content">
    @*<div class="signup-img">
            <img src="images/signup-img.jpg" alt="">
        </div>*@
    <div class="signup-form" style="margin-left:210px; width:100%; box-shadow:4px 4px 8px 8px #cccccc;">
        <form asp-action="Create" enctype="multipart/form-data" method="post" class="register-form" id="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>註冊</h2>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CName" for="name">*姓名 :</label>
                    <input asp-for="CName" id="name" required />
                    <span asp-validation-for="CName" class="text-danger" id="spname"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CPassword" for="name">*密碼 :</label>
                    <input asp-for="CPassword" type="password" id="password" required />
                    <span asp-validation-for="CPassword" class="text-danger" id="sppassword"></span>
                    <span>((1.不可空白 , 2.至少6個字且必須包含英文字母+數字)</span>
                    <span id="Wrongpassword"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="name">*確認密碼 :</label>
                    <input type="password" name="checkPassword" id="checkPassword" required />
                </div>
            </div>
            <div class="form-radio">
                <label asp-for="CGender" for="gender" style="padding-right:20px;">*性別 :</label>
                <div class="form-check form-check-inline">
                    @*暫時替代*@
                    <input asp-for="CGender" id="inlineRadio1">
                </div>
                @*<div class="form-check form-check-inline">
                        <input asp-for="CGender" type="radio" id="inlineRadio1" value="male">
                        <label class="form-check-label" for="inlineRadio1">男</label>
                    </div>*@
                @*<div class="form-check form-check-inline">
                        <input  asp-for="CGender" type="radio" id="inlineRadio2" value="female">
                        <label class="form-check-label" for="inlineRadio2">女</label>
                    </div>*@
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CAge" for="age">*生日 :</label>
                    <input asp-for="CAge" type="date" id="age" required />
                    <span asp-validation-for="CAge" class="text-danger" id="spage"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CAddress" for="address">*地址 :</label>
                <input asp-for="CAddress" id="address" required />
                <span asp-validation-for="CAddress" class="text-danger" id="spaddress"></span>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CPhone" for="name">*手機 :</label>
                    <input asp-for="CPhone" id="phone" required />
                    <span asp-validation-for="CPhone" class="text-danger" id="spphone"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CEmail" for="email" style="position:relative">*Email :</label>
                <input asp-for="CEmail" id="email" required />
                <span asp-validation-for="CEmail" class="text-danger" id="spemail"></span>
                <span id="Wrongemail"></span>
            </div>
            <label asp-for="CPicture" style="position:relative">上傳頭像 :</label>
            <input type="file" name="img" id="image" style="padding:0px; border:none" />
            <span asp-validation-for="CPicture" class="text-danger" id="spimg"></span>

            <div class="form-row">
                <div class="form-group">
                    <label for="code">邀請碼 :</label>
                    <input type="text" name="code" id="code" />
                </div>
            </div>

            <div class="form-submit">
                <input type="submit" value="Reset All" class="submit" name="reset" id="reset" />
                <input type="submit" value="確認註冊" class="submit" name="submit" id="submit" onclick="return confirm('確定要註冊嗎?')" />
            </div>

            <div class="form-submit">
                <input type="button" value="Demo" class="btn btn-primary"
                       onclick='(function () {
    document.getElementById("name").value = "jotaro";
    document.getElementById("email").value = "jotaro@Gmail.com";
    document.getElementById("password").value = "123";
    document.getElementById("checkPassword").value = "123";
    document.getElementById("inlineRadio1").value = "男";
    document.getElementById("address").value = "Japan";
    document.getElementById("phone").value = "0912345678";
                            })()' />
            </div>

        </form>
    </div>
</div>


